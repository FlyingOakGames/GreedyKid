<Window x:Class="GreedyKidEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreedyKidEditor"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="Greedy Kid Editor" Height="500" Width="700" Closing="Window_Closing" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Menu Height="23" VerticalAlignment="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Load">
                    <MenuItem.InputBindings>
                        <KeyBinding Key="L" Modifiers="control"/>
                    </MenuItem.InputBindings>
                </MenuItem>
                <MenuItem Header="_Save">
                    <MenuItem.InputBindings>
                        <KeyBinding Key="S" Modifiers="control"/>
                    </MenuItem.InputBindings>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0,23,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160" MinWidth="160"/>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="160" MinWidth="160" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" >
                <TreeView x:Name="treeView" Margin="10,57,10,10" SelectedItemChanged="treeView_SelectedItemChanged">

                </TreeView>
                <Button x:Name="addButton" Content="+" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="20" Height="20" Click="addButton_Click"/>
                <Button x:Name="removeButton" Content="-" HorizontalAlignment="Left" Margin="35,33,0,0" VerticalAlignment="Top"  Width="20" Height="20" Click="removeButton_Click"/>
                <Button x:Name="renameButton" Content="Rename" HorizontalAlignment="Left" Margin="60,33,0,0" VerticalAlignment="Top"  Width="53" Height="20" Click="renameButton_Click"/>
                <Label x:Name="label" Content="Building composition" Margin="10,2,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" Width="140"/>
            </Grid>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
            <Grid x:Name="rendererBackgroundGrid" Grid.Column="2" Background="Black" SizeChanged="rendererBackgroundGrid_SizeChanged">
                <WindowsFormsHost x:Name="wfHost" Height="184" Width="328" >
                    <wf:Panel x:Name="monoGameRenderPanel"/>
                </WindowsFormsHost>
            </Grid>
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"/>
            <Grid Grid.Column="4" >
                <Label x:Name="label1" Content="Room properties" Margin="0,2,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="114" FontWeight="Bold"/>

                <Grid Width="40" Height="26" Margin="0,33,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13" />
                        <RowDefinition Height="13" />
                    </Grid.RowDefinitions>
                    <TextBox Name="paintTextBox"  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" TextAlignment="Right" Text="0" IsEnabled="False" />
                    <RepeatButton Name="paintButtonUP"  Grid.Column="1" Grid.Row="0" FontSize="8" FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="paintButtonUP_Click">5</RepeatButton>
                    <RepeatButton Name="paintButtonDown"  Grid.Column="1" Grid.Row="1" FontSize="8"  FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="13" VerticalAlignment="Bottom" Click="paintButtonDown_Click">6</RepeatButton>
                </Grid>
                <Label x:Name="label2" Content="Wall color" HorizontalAlignment="Right" Margin="0,33,68,0" VerticalAlignment="Top"/>

                <Grid Width="40" Height="26" Margin="0,66,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13" />
                        <RowDefinition Height="13" />
                    </Grid.RowDefinitions>
                    <TextBox Name="leftMarginTextBox"  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" TextAlignment="Right" Text="0" IsEnabled="False" />
                    <RepeatButton Name="leftMarginButtonUP"  Grid.Column="1" Grid.Row="0" FontSize="8" FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="leftMarginButtonUP_Click">5</RepeatButton>
                    <RepeatButton Name="leftMarginButtonDown"  Grid.Column="1" Grid.Row="1" FontSize="8"  FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="13" VerticalAlignment="Bottom" Click="leftMarginButtonDown_Click">6</RepeatButton>
                </Grid>

                <Grid Width="40" Height="26" Margin="0,99,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13" />
                        <RowDefinition Height="13" />
                    </Grid.RowDefinitions>
                    <TextBox Name="rightMarginTextBox"  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" TextAlignment="Right" Text="0" IsEnabled="False" />
                    <RepeatButton Name="rightMarginButtonUP"  Grid.Column="1" Grid.Row="0" FontSize="8" FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="rightMarginButtonUP_Click">5</RepeatButton>
                    <RepeatButton Name="rightMarginButtonDown"  Grid.Column="1" Grid.Row="1" FontSize="8"  FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="13" VerticalAlignment="Bottom" Click="rightMarginButtonDown_Click">6</RepeatButton>
                </Grid>

                <Grid Width="40" Height="26" Margin="0,132,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13" />
                        <RowDefinition Height="13" />
                    </Grid.RowDefinitions>
                    <TextBox Name="leftDecorationTextBox"  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" TextAlignment="Right" Text="0" IsEnabled="False" />
                    <RepeatButton Name="leftDecorationButtonUP"  Grid.Column="1" Grid.Row="0" FontSize="8" FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="leftDecorationButtonUP_Click">5</RepeatButton>
                    <RepeatButton Name="leftDecorationButtonDown"  Grid.Column="1" Grid.Row="1" FontSize="8"  FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="13" VerticalAlignment="Bottom" Click="leftDecorationButtonDown_Click">6</RepeatButton>
                </Grid>

                <Grid Width="40" Height="26" Margin="0,165,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13" />
                        <RowDefinition Height="13" />
                    </Grid.RowDefinitions>
                    <TextBox Name="rightDecorationTextBox"  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" TextAlignment="Right" Text="0" IsEnabled="False" />
                    <RepeatButton Name="rightDecorationButtonUP"  Grid.Column="1" Grid.Row="0" FontSize="8" FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="rightDecorationButtonUP_Click">5</RepeatButton>
                    <RepeatButton Name="rightDecorationButtonDown"  Grid.Column="1" Grid.Row="1" FontSize="8"  FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="13" VerticalAlignment="Bottom" Click="rightDecorationButtonDown_Click">6</RepeatButton>
                </Grid>
                <Label x:Name="label2_Copy" Content="Left margin" HorizontalAlignment="Right" Margin="0,66,61,0" VerticalAlignment="Top"/>
                <Label x:Name="label2_Copy1" Content="Right margin" HorizontalAlignment="Right" Margin="0,99,52,0" VerticalAlignment="Top"/>
                <Label x:Name="label2_Copy2" Content="Left wall" HorizontalAlignment="Right" Margin="0,132,77,0" VerticalAlignment="Top"/>
                <Label x:Name="label2_Copy3" Content="Right wall" HorizontalAlignment="Right" Margin="0,165,68,0" VerticalAlignment="Top"/>
                <Label x:Name="label1_Copy" Content="Room details" Margin="0,195,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="114" FontWeight="Bold"/>
                <ListBox x:Name="detailListBox" HorizontalAlignment="Right" Height="100" Margin="0,248,10,0" VerticalAlignment="Top" Width="140" SelectionChanged="detailListBox_SelectionChanged"/>
                <Button x:Name="addDetail" Content="+" HorizontalAlignment="Right" Margin="0,223,129,0" VerticalAlignment="Top" Width="20" Height="20" Click="addDetail_Click"/>
                <Button x:Name="removeDetail" Content="-" HorizontalAlignment="Right" Margin="0,223,104,0" VerticalAlignment="Top" Width="20" Height="20"/>
                <Slider x:Name="xDetail" HorizontalAlignment="Right" Margin="0,353,10,0" VerticalAlignment="Top" Width="123" SmallChange="1" Maximum="328" ValueChanged="xDetail_ValueChanged"/>
                <Label x:Name="label2_Copy4" Content="X" HorizontalAlignment="Right" Margin="0,348,136,0" VerticalAlignment="Top"/>
                <Grid Width="40" Height="26" Margin="0,375,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13" />
                        <RowDefinition Height="13" />
                    </Grid.RowDefinitions>
                    <TextBox Name="detailTextBox"  Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" TextAlignment="Right" Text="0" IsEnabled="False" />
                    <RepeatButton Name="detailButtonUP"  Grid.Column="1" Grid.Row="0" FontSize="8" FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="detailButtonUP_Click">5</RepeatButton>
                    <RepeatButton Name="detailButtonDown"  Grid.Column="1" Grid.Row="1" FontSize="8"  FontFamily="Marlett" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="13" VerticalAlignment="Bottom" Click="detailButtonDown_Click">6</RepeatButton>
                </Grid>
                <Label x:Name="label2_Copy5" Content="Type" HorizontalAlignment="Right" Margin="0,376,52,0" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
